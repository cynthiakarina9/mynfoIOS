<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions"
             xmlns:i18n="clr-namespace:Mynfo.Helpers" 
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundColorLigth}, Dark={StaticResource BackgroundColorDark}}"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             x:Class="Mynfo.Views.ListForeignBoxPage">
    <NavigationPage.TitleView>
        <Grid
            HeightRequest = "20">
            <StackLayout 
                HorizontalOptions="Start">
                <Label 
                    FontAttributes = "Bold"
                    FontSize = "18"
                    HorizontalOptions = "Start"
                    Text = "{i18n:Translate ReceivedBoxes}"
                    TextColor = "{StaticResource Dark_FontColor}"/>
            </StackLayout>
            <StackLayout
                HorizontalOptions = "End">
                <ImageButton
                    BackgroundColor = "Transparent"
                    Clicked = "BackHome_Clicked"
                    HeightRequest = "20"
                    HorizontalOptions = "End"
                    Source = "logo_superior.png" 
                    WidthRequest = "75" >
                </ImageButton>
            </StackLayout>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid
            BindingContext="{Binding ListForeignBox}">
            <StackLayout>
                <StackLayout>
                    <Label 
                        Text = "{i18n:Translate ReceivedBoxes}"
                        FontSize = "30"
                        FontAttributes="Bold"
                        TextColor = "{StaticResource MainColor}"
                        HorizontalOptions = "Center"
                        VerticalOptions = "Center"  
                        Margin = "0,15,0,0"/>
                </StackLayout>
                <ListView 
                    ItemsSource="{Binding ForeingBox}"
                    HasUnevenRows="true"
                    ItemSelected="OnListViewItemSelected"
                    ItemTapped="OnListViewItemTapped"
                    Margin="10,35,10,20"
                    BackgroundColor="{AppThemeBinding Dark=Transparent}"
                    x:Name="ForeignBoxList">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid 
                                    Padding="15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35*"/>
                                        <RowDefinition Height="18*"/>
                                        <RowDefinition Height="18*"/>
                                        <RowDefinition Height="29*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30*" />
                                        <ColumnDefinition Width="70*" />
                                    </Grid.ColumnDefinitions>
                                    <StackLayout
                                        Grid.Column="0"
                                        Grid.Row="0"
                                        Grid.RowSpan="3">
                                        <Frame 
                                            BorderColor="{StaticResource MainColor}"
                                            WidthRequest="80"
                                            HeightRequest="80" 
                                            CornerRadius="40"
                                            IsClippedToBounds="True"
                                            HasShadow="False"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Center"
                                            Padding="0">
                                            <Image
                                                WidthRequest="1000"
                                                HeightRequest="1000"
                                                Aspect="AspectFill"
                                                Source = "{Binding ImageFullPath}"/>
                                        </Frame>
                                    </StackLayout>
                                    <!--<controls:CircleImage
                                        BorderColor="{StaticResource MainColor}"
                                        BorderThickness="3"
                                        Grid.Row="0"
                                        Grid.RowSpan="3"
                                        Grid.Column="0"
                                        HeightRequest = "60"
                                        WidthRequest="60"
                                        Aspect="AspectFill"
                                        Source="{Binding ImageFullPath}">
                                    </controls:CircleImage>-->
                                    <Label 
                                        Grid.Column="1"
                                        Grid.Row="0"
                                        FontAttributes="Bold" 
                                        FontSize="Title"
                                        Text="{Binding FullName}"
                                        TextColor="{StaticResource MainColor}"
                                        VerticalTextAlignment="Center"
                                        Margin="15,0,0,0"/>
                                    <Label 
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        FontAttributes="Italic" 
                                        FontSize="Body"
                                        TextColor="{AppThemeBinding Light={StaticResource Light_FontColor}, Dark={StaticResource Dark_FontColor}}"
                                        VerticalTextAlignment="Center"
                                        Margin="15,0,0,0"
                                        IsVisible="{Binding Edad}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding Edad}"></Span>
                                                <Span Text="{i18n:Translate Anios}"></Span>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label 
                                        Grid.Column="1"
                                        Grid.Row="2"
                                        FontAttributes="Italic" 
                                        FontSize="Body"
                                        Text="{Binding Ubicacion}"
                                        TextColor="{AppThemeBinding Light={StaticResource Light_FontColor}, Dark={StaticResource Dark_FontColor}}"
                                        VerticalTextAlignment="Center"
                                        Margin="15,0,0,0"/>
                                    <Label 
                                        Grid.ColumnSpan="2"
                                        Grid.Row="3"
                                        FontAttributes="Bold" 
                                        FontSize="Large"
                                        TextColor="{AppThemeBinding Light={StaticResource Light_FontColor}, Dark={StaticResource Dark_FontColor}}"
                                        VerticalTextAlignment="End"
                                        HorizontalTextAlignment="Center">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span TextColor="{StaticResource MainColor}" Text="{i18n:Translate ViewsLabel}" ></Span>
                                                <Span Text="{Binding Conexiones}"></Span>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>  