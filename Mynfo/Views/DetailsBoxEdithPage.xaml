<?xml version="1.0" encoding="utf-8" ?>
<popup:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:Mynfo.Helpers"
             xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             x:Class="Mynfo.Views.DetailsBoxEdithPage"
             x:Name="FullBackGround"
             BackgroundColor="Transparent"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    <ContentPage.Content>
        <Frame
            CornerRadius="50"
            Margin="30"
            x:Name="BackG">
            <Grid
                BindingContext = "{Binding DetailsBoxEdith}">
                <Grid>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <!--Botón para borrar box-->
                        <ImageButton 
                            BackgroundColor="Transparent"
                            Grid.Column ="3"
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            HeightRequest="40"
                            HorizontalOptions="End"
                            VerticalOptions="Start"
                            WidthRequest="40"
                            x:Name="DeleteButton" />
                        <!-- Botón para paleta de colores-->
                        <ImageButton 
                            BackgroundColor="Transparent"
                            Grid.Column="0"
                            Grid.RowSpan="2"
                            HeightRequest="40"
                            HorizontalOptions="Start"
                            VerticalOptions="Start"
                            WidthRequest="40"
                            x:Name="ColorBtn"/>
                        <!--Nombre de la box -->
                        <Entry 
                            FontAttributes="Bold"
                            FontSize="25"
                            Grid.ColumnSpan="4"
                            Grid.Row="1"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            MaxLength="20"
                            Text="{Binding Box.Name, Mode=TwoWay}"
                            TextColor="{AppThemeBinding Light={StaticResource Light_FontColor}, Dark={StaticResource MainColor}}"
                            VerticalOptions="Center"
                            BackgroundColor="{AppThemeBinding Dark=Transparent}"
                            WidthRequest="200"
                            x:Name="NameEntry"/>
                        
                        <CollectionView 
                            ItemsSource="{Binding ProfilePerfiles}"
                            Grid.Row="3"
                            Grid.ColumnSpan="4"
                            SelectionMode="Single"
                            SelectionChanged="OnCollectionViewSelectionChanged"
                            Margin="0,20,0,0">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical"
                                        Span="3" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="35" />
                                            <RowDefinition Height="35" />
                                        </Grid.RowDefinitions>
                                        <StackLayout
                                            HorizontalOptions="Center">
                                            <ImageButton
                                                BackgroundColor="Transparent"
                                                HeightRequest="50"
                                                Source="{Binding Logo}"
                                                WidthRequest="50"/>
                                            <Label
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding ProfileName}"
                                                FontAttributes="Bold"
                                                TextColor="{AppThemeBinding Light={StaticResource Light_FontColor}, Dark={StaticResource Dark_FontColor}}" />
                                        </StackLayout>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                            <CollectionView.EmptyView>
                                <ContentView>
                                    <StackLayout 
                                        HorizontalOptions="CenterAndExpand"
                                        VerticalOptions="CenterAndExpand">
                                        <Label 
                                            FontAttributes="Bold"
                                            FontSize="18"
                                            HorizontalOptions="Fill"
                                            HorizontalTextAlignment="Center" 
                                            Margin="10,0,10,280"
                                            Text="{i18n:Translate EmptyBox}"
                                            VerticalOptions="CenterAndExpand"/>
                                    </StackLayout>
                                </ContentView>
                            </CollectionView.EmptyView>
                        </CollectionView>
                    </Grid>
                </Grid>
                <!--Agregar perfiles-->
                <Button
                    BackgroundColor = "{StaticResource MainColor}"
                    BorderRadius = "23"
                    HeightRequest = "50"
                    Margin="15"
                    Text = "{i18n:Translate Save}"
                    TextColor="{AppThemeBinding Light={StaticResource Dark_FontColor}, Dark={StaticResource Light_FontColor}}"
                    VerticalOptions = "End"
                    x:Name="BoxUpdateBtn" />
            </Grid>
        </Frame>
    </ContentPage.Content>
</popup:PopupPage>