<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mynfo.Views.TabbedListOfNetworksPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundColorLigth}, Dark={StaticResource BackgroundColorDark}}"
            BarTextColor="{AppThemeBinding Light={StaticResource Light_FontColor}, Dark={StaticResource Dark_FontColor}}"
            SelectedTabColor="#FF5521"
            UnselectedTabColor="{AppThemeBinding Light={StaticResource Light_FontColor}, Dark={StaticResource Dark_FontColor}}">
    <NavigationPage.TitleView>
        <Grid>
            <StackLayout
                Padding = "0,0,70,0">
                <ImageButton
                    BackgroundColor = "Transparent"
                    Source = "logo_superior3.png" 
                    WidthRequest = "100" />
            </StackLayout>
        </Grid>
    </NavigationPage.TitleView>
</TabbedPage>